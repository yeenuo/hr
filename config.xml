<?xml version='1.0' encoding='utf-8'?>
<widget id="com.renxd.hr" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>好人多</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="javaandnet@gmail.com" href="http://www.renxd.com">
        GoodMan
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <preference name="SplashScreen" value="screen"/> <!-- 不带后缀png的文件名，默认是screen-->
    <preference name="SplashScreenDelay" value="4000"/> <!-- Splash显示时间，默认是3000ms-->
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen"/>
    </feature>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon src="res/mipmap-ldpi/ic_launcher.png" density="ldpi"/>
        <icon src="res/mipmap-mdpi/ic_launcher.png" density="mdpi"/>
        <icon src="res/mipmap-hdpi/ic_launcher.png" density="hdpi"/>
        <icon src="res/mipmap-xhdpi/ic_launcher.png" density="xhdpi"/>
        <icon src="res/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi"/>
        <icon src="res/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/splash_hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash_hdpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash_hdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash_hdpi.png" density="land-xhdpi"/>
        <!--<splash src="res/screen/android/splash_ldpi.png" density="land-ldpi"/>-->
        <!--<splash src="res/screen/android/splash_mdpi.png" density="land-mdpi"/>-->
        <!--<splash src="res/screen/android/splash_xhdpi.png" density="land-xhdpi"/>-->
        <splash src="res/screen/android/splash_hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash_hdpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash_hdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash_hdpi.png" density="port-xhdpi"/>
        <preference name="FadeSplashScreenDuration" value="3000"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <chcp>
        <config-file url="http://153.122.98.240:8379/www/chcp.json"/>
    </chcp>
</widget>
